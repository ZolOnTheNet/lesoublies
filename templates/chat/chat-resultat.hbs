<div class="resultat chat">
    {{#if estUnSucces}}
        <h1> {{labelAction}} Success !</h1>
    {{else}}
        <h1>Echec !</h1>
    {{/if}}
    {{#if titre}}
        <h3><span class="roll-description">{{titre}}</span></h3>
    {{/if}}
    {{#if estUnSucces}}
        <div class="roll-description">Votre réussite est <strong>{{resultatQual}}</strong>({{score}})</div>
        <hr>
    {{else}}
        <div class="roll-description">Votre score est {{score}}, pas suffisant</div>
    {{/if}}
    {{#if description}}
			<div class="roll-description">{{description}}</div>
            <hr>
    {{/if}}    
    {{#if aDommage}}
        
        <h3>Dommages</h3>
        <div class="grid grid-5col">
            <div class="grid-span-3">les dommages de l'arme {{textArme}} : {{dommage}}</div>
            <button class="Dommage cmd"  data-action="chat.dommage.moins.{{dommage}}.{{idToken}}.{{idActor}}">
                <i title="Enlever les dommages sur le personnage selectionnée!" class="fa-solid fa-user-minus"></i>
            </button>
            <button class="Dommage cmd"  data-action="chat.dommage.plus.{{dommage}}.{{idToken}}.{{idActor}}">
                <i title="Ajouter les dommages sur le personnage selectionnée!" class="fa-solid fa-user-plus"></i>
            </button>
        </div>
    {{/if}}
    <div class="roll-description">{{textRappel}} </div>
    <hr>
    {{#if lstPrimes}}
    <div>
        <h3>Rappel des primes</h3>
        <ul class="items-header">
            {{#each lstPrimes as |ele key| }}
            <li><div class="item-name">{{ele.label}}</div><div class="items-list ">{{ele.description}}</div></li>
            {{/each}}
        </ul>
    </div>
    {{/if}}
    {{#if lstPenalites}}
    <div>
        <h3>Rappel des pénalités</h3>
        <ul class="items-header">
            {{#each lstPenalites as |ele key| }}
            <li><div class="item-name">{{ele.label}}</div><i class="items-list ">{{ele.description}}</i></li>
            {{/each}}
        </ul>
    </div>
    {{/if}}
</div>